@page
@model LogoutModel
@{
    ViewData["Title"] = "Вы вышли из аккаунта";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Index" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Нажмите для выхода</button>
            </form>
        }
        else
        {

        }
    }
</header>